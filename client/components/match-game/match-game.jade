link(rel="import", href="/bower_components/polymer/polymer.html")
link(rel="import", href="/bower_components/paper-button/paper-button.html")
polymer-element(name="match-game", attributes="match modes gametypes inGame")
  template
    .header
      | {{modes[match.Info.MatchType]}} - {{gametypes[match.Info.GameMode]}}
    .tablewrapper
      table.table.table-striped(style="margin-bottom:0")
        tbody
          template(bind="",if="{{!inGame&&match.Players.length<10}}")
            tr(style="padding:0")
              td(style="padding:0")
                paper-button.success-btn(label="Join",style="width:100%;height:100%",on-click="{{joinMatch}}")
          tr(style="font-weight:bold;color:black;background:white") 
            td {{match.Info.Name}}
          template(repeat="{{player in match.Players}}")
            tr(class="{{ {success: player.Team==0, danger: player.Team==1, boldText: player.SID==match.Info.Owner} | tokenList }}")
              td
                img(src="{{player.Avatar}}",style="width:15px;height:15px;margin-right:5px")
                | {{player.Name}}
    link(rel="stylesheet", href="/bower_components/bootstrap/dist/css/bootstrap.css")
    style.
      .header {
        width: 100%;
        color: black;
        text-align: center;
        font-size: 1.5em;
        font-weight: 500;
        background-color: rgba(255,0,0,0.58);
      }
      .success-btn {
        background: #2FD22E;
        color: #fff;
        border-radius: 0;
      }
      .success-btn:hover {
        background: #298028;
      }
      .success-btn::shadow #ripple {
        color: #FD9292;
      }
      .tablewrapper {
         max-height: 50%; 
         overflow: auto;
      }
      .boldText {
        font-weight: bold;
      }
  script(src="match-game.js")
