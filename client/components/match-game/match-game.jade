link(rel="import", href="/bower_components/polymer/polymer.html")
link(rel="import", href="/bower_components/paper-checkbox/paper-checkbox.html")
polymer-element(name="match-game", attributes="match modes gametypes")
  template
    .header
      | {{modes[match.Info.Mode]}} - {{gametypes[match.GameType]}}
      paper-checkbox(checked, role="checkbox")
    .tablewrapper
      table.table.table-striped(style="margin-bottom:0")
        tbody
          tr(style="font-weight:bold;color:black") 
            td {{match.Info.Name}}
          template(repeat="{{player in match.Players}}")
            tr(class="{{ {success: player.Team==0, danger: player.Team==1} | tokenList }}")
              td
                img(src="{{player.Avatar}}",style="width:15px;height:15px;margin-right:5px")
                | {{player.Name}}
    link(rel="stylesheet", href="/bower_components/bootstrap/dist/css/bootstrap.css")
    style.
      .header {
        width: 100%;
        color: black;
        text-align: center;
        font-size: 1.5em;
        font-weight: 500;
        background-color: rgba(255,0,0,0.58);
      }
      .header paper-checkbox {
        float:right;
        margin-right: 8px;
        margin-top: 5px;
      }
      .tablewrapper {
         max-height: 50%; 
         overflow: auto;
      }
      paper-checkbox::shadow #ink {
        top:-3px;
        left:-3px;
        width: 25px;
        height: 25px;
      }
  script(src="match-game.js")
