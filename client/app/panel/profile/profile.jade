.container-fluid(style="padding-top:15px")
  //- .col-md-3(style="text-align:center;padding:25px;box-shadow: 0 0 5px 0 rgba(0,0,0,0.75)")
    img(ng-src="{{profile.steam.avatarfull}}",style="width:90%;margin-bottom:15px")
    div(auto-font-size="{grow:false,shrink:true}", style="width: 100%;height:50px;font-size:40px")
      | {{profile.profile.name}}
    div(style="width:100%;font-size:25px")
      | {{'Rating'|translate}}: {{profile.profile.rating}}
    paper-button(raised="",ng-click="openLink(profile.steam.profileurl)",style="margin-top:5px") 
      i.fa.fa-steam(style="margin-right:5px")
      | {{'View Steam Profile'|translate}}
    paper-button(raised="",ng-if="auth.inRole('vouch')",ng-click="devouch()",style="margin-top:5px") 
      i.fa.fa-ban(style="margin-right:5px")
      | {{'Devouch Player'|translate}}

  .row
    .col-lg-5.col-md-6.col-sm-12
      .card.hovercard
        .cardheader(style="background-image: url('{{profile.vouch.teamavatar || profile.vouch.avatar || 'http://i.imgur.com/kQpTWRb.png'}}')")
        .avatar
          img(alt='', ng-src='{{profile.steam.avatarfull}}')
        .info
          .title
            | {{profile.profile.name}}
          .desc Rating: {{profile.profile.rating}}
          .desc Wins: {{profile.profile.wins}}
          .desc Losses: {{profile.profile.losses}}
          .desc Abandons: {{profile.profile.abandons}}
        .bottom
          p
            paper-button.btn-primary(raised="",ng-click="openLink(profile.steam.profileurl)")
              i.fa.fa-steam &nbsp;
              | View Steam Profile
          p(ng-if="auth.inRole('vouch')")
            paper-button.btn-danger(raised="",ng-click="devouch()")
              i.fa.fa-ban &nbsp;
              | Unvouch Player
    .col-sm-3(style="text-align:center;padding:25px;box-shadow: 0 0 2px 0 rgba(0,0,0,0.5)", ng-if="auth.inRole('admin')")
      p(style="margin-bottom:0;font-weight:bold;font-size: 1.5em")
        | {{"Admin Tools" | translate}}
      paper-button(raised="",ng-click="addRating()",style="margin-top:5px") 
        i.fa.fa-star(style="margin-right:5px")
        | {{'Adjust Rating'|translate}}
      paper-button(raised="",ng-click="addWins()",style="margin-top:5px") 
        i.fa.fa-flag(style="margin-right:5px")
        | {{'Adjust Wins'|translate}}
      paper-button(raised="",ng-click="addLosses()",style="margin-top:5px") 
        i.fa.fa-close(style="margin-right:5px")
        | {{'Adjust Losses'|translate}}
